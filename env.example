AZURE_AD_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
AZURE_AD_AUDIENCE=your-app-id

# Database Connection Strings
SQL_SERVER_CONNECTION_STRING=Server=localhost;Database=PortfolioDB;Trusted_Connection=true;TrustServerCertificate=true;
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/PortfolioAnalytics

# JWT Configuration
JWT_SECRET=your-super-secret-key-with-at-least-32-characters
JWT_ISSUER=PortfolioAPI
JWT_AUDIENCE=PortfolioClient
JWT_EXPIRY_MINUTES=60

# Azure DevOps Pipeline Variables
AZURE_STATIC_WEB_APPS_API_TOKEN=your-static-web-apps-token
AZURE_SUBSCRIPTION=your-azure-subscription-id 